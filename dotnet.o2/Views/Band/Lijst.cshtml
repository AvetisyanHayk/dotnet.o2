@using MyHobbies;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lijst</title>
</head>
<body>
    <header>
        <h1>Band > Lijst</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/Band">Band</a></li>
            </ul>
        </nav>
    </header>
    <ul>
        @foreach (Band band in ViewBag.Bands)
        {
            <li><a href="/Band/Wijzig?naam=@band.Naam">@band</a></li>
        }
    </ul>
    <hr />
    <strong>JSON</strong>
    <ul id="json-lijst"></ul>

    <a href="/Band/LijstMetLeden">Toon bandleden</a>
    <a href="/Band/Maak">Nieuwe Band</a>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/assets/js/script.js"></script>
</body>
</html>
